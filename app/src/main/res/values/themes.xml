<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.AJStudy" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ajstudy_default_color_primary</item>
        <item name="colorPrimaryVariant">@color/ajstudy_default_color_primary_variant</item>
        <item name="colorOnPrimary">@color/ajstudy_default_color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ajstudy_default_color_secondary</item>
        <item name="colorSecondaryVariant">@color/ajstudy_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/ajstudy_default_color_on_secondary</item>

        <!-- 关键：状态栏透明 -->
        <item name="android:statusBarColor">@color/ajstudy_transparent</item>
        <item name="android:navigationBarColor">@color/ajstudy_transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- 确保内容延伸到状态栏 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- 隐藏 ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowBackground">@drawable/splash_background</item>

        <!-- 关键：状态栏白色 -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- 隐藏 ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.App.Login" parent="Theme.MaterialComponents.DayNight">
        <!-- 关键：状态栏白色 -->
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- 隐藏 ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:excludeFromRecents">true</item>
    </style>
</resources>