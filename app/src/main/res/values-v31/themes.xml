<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AJStudy" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ajstudy_default_color_primary</item>
        <item name="colorPrimaryVariant">@color/ajstudy_default_color_primary_variant</item>
        <item name="colorOnPrimary">@color/ajstudy_default_color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ajstudy_default_color_secondary</item>
        <item name="colorSecondaryVariant">@color/ajstudy_default_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/ajstudy_default_color_on_secondary</item>

        <!-- Android 12+ 的沉浸式状态栏配置 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Material 3 动态色彩 -->
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:enforceNavigationBarContrast">true</item>
        <item name="android:enforceStatusBarContrast">true</item>

        <!-- 隐藏 ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>