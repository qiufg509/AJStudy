<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--详情页截图原件-->
    <style name="ScreenshotItemCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_l</item>
    </style>
    <!-- 底部导航栏样式 -->
    <style name="BottomNavStyles" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/ajstudy_window_background</item>
        <item name="itemBackground">@null</item>
        <item name="itemShapeAppearance">@null</item>
        <item name="itemShapeFillColor">@null</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconSize">24dp</item>
        <item name="elevation">0dp</item>
        <item name="itemTextColor">@drawable/bottom_nav_text_tint</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextStyle</item>
        <item name="itemTextAppearance">@style/BottomNavTextStyle</item>
        <item name="android:itemTextAppearance">@style/BottomNavTextStyle</item>
    </style>
    <!-- 底部导航栏文字基础样式 -->
    <style name="BottomNavTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@null</item>
    </style>
    <!--对话框动画-底部滑入滑出-->
    <style name="DialogAnimPushBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_push_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_out_bottom</item>
    </style>
    <!--对话框动画-淡入淡出-->
    <style name="DialogAnimFade" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
    </style>
    <!--对话框动画-material缩放透明-->
    <style name="DialogAnimMaterial" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_material_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_material_out</item>
    </style>
    <!--对话框动画-缩放透明-->
    <style name="DialogAnimScale" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_scale_out</item>
    </style>
    <!--对话框动画-底部淡入淡出-->
    <style name="DialogAnimSlideBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out_bottom</item>
    </style>
</resources>