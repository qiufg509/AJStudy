<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 应用主题 -->
    <style name="Theme.AJStudy" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ajstudy_color_primary</item>
        <item name="colorSecondary">@color/ajstudy_color_secondary</item>

        <!-- 设置自定义背景色 -->
        <item name="colorSurface">@color/ajstudy_window_background</item>
        <item name="android:windowBackground">@color/ajstudy_window_background</item>

        <!-- 关键：覆盖BottomNavigationView样式 -->
        <item name="bottomNavigationStyle">@style/BottomNavStyles</item>
    </style>

    <!--启动页主题-->
    <style name="Theme.Page.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>

        <!-- 关键：状态栏白色 -->
        <item name="android:statusBarColor">@color/ajstudy_splash_page_bg</item>
        <item name="android:windowLightStatusBar">?android:isLightTheme</item>

        <!-- 隐藏 ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--登录页主题-->
    <style name="Theme.Page.Login" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 关键：状态栏白色 -->
        <item name="android:statusBarColor">@color/ajstudy_login_page_bg</item>
        <item name="android:windowLightStatusBar">?android:isLightTheme</item>

        <!-- 隐藏 ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--手机最近任务中排除（安全属性）-->
        <item name="android:excludeFromRecents">true</item>
    </style>
    <!--详情页主题-禁用所以滚动控件的边缘阴影效果-->
    <style name="Theme.Page.Detail" parent="Theme.AJStudy">
        <item name="android:overScrollMode">never</item>
    </style>
</resources>