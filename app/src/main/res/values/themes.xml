<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 应用主题 -->
    <style name="Theme.AJStudy" parent="Theme.Material3.DayNight.NoActionBar">
        <!--主品牌色-->
        <item name="colorPrimary">@color/ajstudy_primary_blue</item>
        <!--主色变体-->
        <item name="colorPrimaryVariant">@color/ajstudy_primary_variant_blue</item>
        <!--强调色-->
        <item name="colorSecondary">@color/ajstudy_color_secondary</item>
        <!--强调色变体-->
        <item name="colorSecondaryVariant">@color/ajstudy_color_secondary</item>
        <!--表面色-->
        <item name="colorSurface">@color/ajstudy_window_background</item>
        <!--主色上的文字色-->
        <item name="colorOnPrimary">@color/ajstudy_color_text_primary</item>
        <!--强调色上的文字色-->
        <item name="colorOnSecondary">@color/ajstudy_color_text_secondary</item>

        <!-- 设置自定义背景色 -->
        <item name="android:windowBackground">@color/ajstudy_window_background</item>

        <item name="android:textColorHighlight">@color/ajstudy_color_text_primary</item>
        <item name="android:textColorHighlightInverse">@color/ajstudy_color_text_primary</item>

        <!--禁用所以滚动控件的边缘阴影效果-->
        <item name="android:overScrollMode">never</item>
    </style>

    <!--红色主题-->
    <style name="Theme.AJStudy.Red" parent="Theme.AJStudy">
        <item name="colorPrimary">@color/ajstudy_primary_red</item>
        <item name="colorPrimaryVariant">@color/ajstudy_primary_variant_red</item>
    </style>

    <style name="Theme.Splash.Red" parent="Theme.AJStudy.Red">
        <item name="colorSurface">@android:color/white</item>
        <item name="android:windowBackground">@drawable/splash_background</item>

        <!-- 关键：状态栏白色 -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">?android:isLightTheme</item>

        <!-- 隐藏 ActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Main.Red" parent="Theme.AJStudy.Red">
        <!--由子页面fragment根据需求设置不同背景-->
        <item name="colorSurface">@android:color/transparent</item>
        <item name="android:windowBackground">@null</item>
        <!-- 关键：覆盖BottomNavigationView样式 -->
        <item name="bottomNavigationStyle">@style/BottomNavStyles</item>
    </style>

    <style name="Theme.Login.Red" parent="Theme.AJStudy.Red">
        <!-- 关键：状态栏白色 -->
        <item name="android:statusBarColor">@color/ajstudy_window_background</item>
        <item name="android:windowLightStatusBar">?android:isLightTheme</item>
        <!--手机最近任务中排除（安全属性）-->
        <item name="android:excludeFromRecents">true</item>
    </style>

